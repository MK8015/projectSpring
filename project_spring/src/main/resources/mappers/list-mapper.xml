<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers.list">
	
	<!-- 목록 조회  -->
	<select id="getProductList" resultType="ProductVo">
		select * from 
    		(select rownum rnum, a.* from 
        		(select * from t_product
        		<include refid="searchKeyword"></include>) a)
		where rnum between #{startRow} and #{endRow}
	</select>
	
	<!-- 카테고리별 목록 조회 -->
	<select id="getListByCategory" resultType="ProductVo">
		select * from 
    		(select rownum rnum, a.* from 
        		(select * from (select * from t_product
		where product_category = #{product_category})) a)
		where rnum between #{startRow} and #{endRow}
	</select>
	
	<!-- 글 갯수 -->
	<select id="getCount" resultType="int">
		select count(*) from t_product
		<choose>
			<when test="product_category neq null">
				<include refid="searchCategory"></include>
			</when>	
			<when test="searchType neq null and keyword neq null">
				<include refid="searchKeyword"></include>
			</when>
		</choose>
	</select>
	
	<!-- 카테고리 옵션 -->
	<sql id="searchCategory">
	<if test='product_category neq null and product_category neq ""'>
		where product_category = #{product_category}
    </if>
    </sql>
    
    <!-- 검색 옵션 -->
	<sql id="searchKeyword">
	<if test="searchType neq null and keyword neq null">
		<choose>
			<when test='searchType eq "t"'>
				where product_name like '%' || #{keyword} || '%'
			</when>
			<when test='searchType == "w"'>
				where product_author like '%' || #{keyword} || '%'
			</when>
			<when test='searchType == "p"'>
				where product_publisher like '%' || #{keyword} || '%'
			</when>
		</choose>			
     </if>
     </sql>
</mapper>